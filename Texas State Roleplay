    <script>
        // Simulate member count (replace with actual Discord API call)
        function updateMemberCount() {
            const memberCount = document.getElementById('memberCount');
            // This is a placeholder - you'll need to implement actual Discord API integration
            memberCount.innerHTML = 'ðŸ‘¥ <span id="count">1,247</span> Members Online';
        }

        // Modal functions
        function openModal(type) {
            document.getElementById(type + 'Modal').style.display = 'block';
        }

        function closeModal(type) {
            document.getElementById(type + 'Modal').style.display = 'none';
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            if (event.target.className === 'modal') {
                event.target.style.display = 'none';
            }
        }

        // Form submission handlers
        document.getElementById('generalForm').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('General support ticket submitted! We will contact you soon on Discord.');
            closeModal('general');
            this.reset();
        });

        document.getElementById('iaForm').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Internal Affairs report submitted! This will be reviewed by our IA team.');
            closeModal('ia');
            this.reset();
        });

        document.getElementById('hrForm').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('HR/Management request submitted! Department leadership will review your request.');
            closeModal('hr');
            this.reset();
        });

        // Initialize
        updateMemberCount();
        
        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Auto-update member count every 30 seconds (placeholder)
        setInterval(updateMemberCount, 30000);
    </script>
